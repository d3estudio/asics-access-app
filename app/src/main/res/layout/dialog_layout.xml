<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/dialog_guest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dialog_guest_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/dialog_guest_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textAllCaps="true"
        android:textSize="13sp" />


    <Button
        android:id="@+id/button_dialog_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_local_printshop_black_24dp"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:text="Imprimir" />

    <Button
        android:id="@+id/warning_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_warning"
        android:text="Convidado ja realizou checkin"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:visibility="gone"
        android:clickable="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/button_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:background="@drawable/right_button_selector"
            android:text="cancelar" />

        <Button
            android:id="@+id/button_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:background="@drawable/left_button_selector"
            android:text="confirmar" />

    </LinearLayout>

</LinearLayout>